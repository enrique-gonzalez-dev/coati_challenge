<div class="card-header">
  <h4>Sellers</h4>
</div>

<div class="card-body">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Address</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @sellers.each do |seller| %>
        <tr>
          <td><%= seller.name %></td>
          <td><%= seller.address %></td>
          <td><%= link_to 'Show', seller %></td>
          <td><%= link_to 'Edit', edit_seller_path(seller) %></td>
          <td><%= link_to 'Destroy', seller, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
