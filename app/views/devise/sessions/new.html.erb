<div class="container-fluid d-flex align-items-center" style="min-height: 100vh">
  <div class="container">
    <div class="row">
      <div class="col-12 d-flex justify-content-center">
        <div class="card" style="width: 600px">
          <div class="card-header">
            <h2>Iniciar sesión</h2>
          </div>
          <div class="card-body">
    
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form-group">
                <%= f.label :email, class: "form-control-label" %>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
              </div>
    
              <div class="form-group my-3">
                <%= f.label "Contraseña", class: "form-control-label" %><br />
                <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
              </div>
    
              <% if devise_mapping.rememberable? %>
                <div class="field mb-3 ">
                  <%= f.check_box :remember_me, class: "form-check-input" %>
                  <%= f.label "Recordarme" %>
                </div>
              <% end %>
    
              <div class="actions">
                <%= f.submit "Iniciar sesión", class: "btn btn-success mb-3" %>
              </div>
            <% end %>
    
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
