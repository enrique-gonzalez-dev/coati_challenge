<div class="card-header">
  <h4>Dashboard</h4>
</div>
<div class="card-body">
  <p>Datos relevantes</p>
  <div class="row">
      <div class="col-12 col-md-6 col-lg-3">
        <div class="card">
            <div class="card-body d-flex justify-content-between">
              <h5>Total de tickets</h5>
              <p><%= @tickets.count%></p>
            </div>
        </div>
      </div>
      <div class="col-12 col-md-6 col-lg-3">
        <div class="card">
            <div class="card-body d-flex justify-content-between">
              <h5>Total de clientes</h5>
              <p><%= @clients.count %></p>
            </div>
        </div>
      </div>
      <div class="col-12 col-md-6 col-lg-3">
        <div class="card">
            <div class="card-body d-flex justify-content-between">
              <h5>Total de productos </h5>
              <p><%= @products.count %></p>
            </div>
        </div>
      </div>
      <div class="col-12 col-md-6 col-lg-3">
        <div class="card">
            <div class="card-body d-flex justify-content-between">
              <h5>Total de vendedores</h5>
              <p><%= @sellers.count %></p>
            </div>
        </div>
      </div>
      <div class="col-12 my-3">
        <div class="card">
            <div class="card-body d-flex justify-content-between">
              <h5>Ingresos totales</h5>
              <p>$<%= @total_revenue %></p>
            </div>
        </div>
      </div>
  </div>
</div>

               